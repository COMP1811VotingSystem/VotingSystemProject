 class Results(Candidate):
    def __init__(self, username, position, first_preference, second_preference, third_preference, fourth_preference):
        self.username = username
        self.position = position
        self.first_preference = 0
        self.second_preference = 0
        self.third_preference = 0
        self.fourth_preference = 0
        super.__init__(username, position)

